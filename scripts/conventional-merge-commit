#!/bin/sh
# prepare-commit-msg:
# rewrite auto-generated merge/squash messages to conventional commit format

# shellcheck source=lib/commit-msg.sh disable=SC1091
. "$(dirname "$0")/lib/commit-msg.sh"

commit_msg_file="$1"
commit_source=${2-}

# Read and parse commit message
read_commit_msg "$commit_msg_file"

# Strip leading whitespace (POSIX parameter expansion)
stripped="${COMMIT_FIRST_LINE#"${COMMIT_FIRST_LINE%%[![:space:]]*}"}"

# Detect message type from content (single source of truth for trigger patterns)
# Word boundary: keyword alone or followed by non-word character
# Order matters: longest keywords first to prevent partial matches
#   ^\s*([Mm]erge[ds]?|[Ss]quash(e[ds])?|[Rr]evert|[Rr]eapply)\b.*$
msg_type=""
case "$stripped" in
[Mm]erges | [Mm]erges[![:alnum:]_]*) msg_type="merge" ;;
[Mm]erged | [Mm]erged[![:alnum:]_]*) msg_type="merge" ;;
[Mm]erge | [Mm]erge[![:alnum:]_]*) msg_type="merge" ;;
[Ss]quashes | [Ss]quashes[![:alnum:]_]*) msg_type="squash" ;;
[Ss]quashed | [Ss]quashed[![:alnum:]_]*) msg_type="squash" ;;
[Ss]quash | [Ss]quash[![:alnum:]_]*) msg_type="squash" ;;
[Rr]eapply | [Rr]eapply[![:alnum:]_]*) msg_type="revert" ;;
[Rr]evert | [Rr]evert[![:alnum:]_]*) msg_type="revert" ;;
esac

# If commit_source not provided (e.g., pre-commit), use detected type
# This allows the hook to work both as a native git hook and via pre-commit
if [ -z "$commit_source" ]; then
	commit_source="$msg_type"
fi

# Only process merge/squash/revert commits
case "$commit_source" in
merge | squash | revert) ;;
*) exit 0 ;;
esac

# Verify message matches trigger pattern (required for native git hooks where
# $2 is provided but message may have been edited)
if [ -z "$msg_type" ]; then
	exit 0
fi

# Transform based on message type
if [ "$msg_type" = "revert" ]; then
	# For revert/reapply: "revert: revert <rest>" or "revert: reapply <rest>"
	case "$stripped" in
	Revert*)
		rest="${stripped#Revert}"
		new_first_line="revert: revert$rest"
		;;
	revert*)
		rest="${stripped#revert}"
		new_first_line="revert: revert$rest"
		;;
	Reapply*)
		rest="${stripped#Reapply}"
		new_first_line="revert: reapply$rest"
		;;
	reapply*)
		rest="${stripped#reapply}"
		new_first_line="revert: reapply$rest"
		;;
	esac
else
	# For merge/squash: "chore: " + lowercase first char + rest
	first_char="${stripped%"${stripped#?}"}"
	rest="${stripped#?}"
	case "$first_char" in
	[Mm]) new_first_line="chore: m$rest" ;;
	*) new_first_line="chore: s$rest" ;; # Default: S/s (squash)
	esac
fi

write_commit_msg "$commit_msg_file" "$new_first_line" "$COMMIT_REST"
